<%- include('partials/header') %>
<main>
  <section class="forgot-sec">
    <div class="container">
      <div>
        <form class="form-control" action="/users/newPassword" method="POST">
          <h3 class="ternary-heading">Set your new password</h3>
          <% if (error) { %>
          <p class="err-msg"><%= error %></p>
          <% } %>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter Your Email"
          />
          <input
            type="password"
            name="password"
            placeholder="set new password"
            required
          />
          <input
            type="password"
            name="confirm"
            placeholder="Confirm password"
            required
          />
          <input type="submit" class="btn form-control" value="Set Password"></input>
        </form>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') %>